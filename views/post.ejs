        };
        // <% if (user.roles.includes('admin')) { %>
        document.getElementById('edit').onclick = e => {
            console.log('TODO: edit');
        };
        document.getElementById('delete').onclick = e => {
            fetch('/admin/posts/<%= post.id %>', {
                method: 'DELETE',
            }).then(response => {
                window.location.href = '/';
            });
        };
        // <% } %>
        // <% } %>
    </script>
</body>

</html>
