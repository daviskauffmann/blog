<nav>
    <a href="/">Home</a> |
    <% if (user) { %>
    <% if (user.verified) { %>
    <% if (user.roles.includes('admin')) { %>
    <a href="/admin/add-post">Add Post</a> |
    <a href="/admin/images">Images</a> |
    <a href="/admin/add-image">Add Image</a> |
    <% } %>
    <a href="/change-password">Change Password</a> |
    <% } %>
    <a href="javascript:logout();">Logout</a>
    <% } else { %>
    <a href="/register">Register</a> |
    <a id="login">Login</a>
    <% } %>
</nav>

<script>
    // <% if (user) { %>
    function logout() {
        fetch('/logout', {
            method: 'POST',
        }).then(response => {
            window.location.href = '/';
        });
    }
    //<% } else { %>
    document.getElementById('login').href = `/login?returnurl=${window.location.href}`;
    // <% } %>
</script>
