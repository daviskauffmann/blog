<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Images</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('header') %>

    <% for(let i = 0; i < images.length; i++) { %>
    <img src="/images/<%= images[i].filename %>">
    <button id="delete-<%= images[i].id %>">Delete</button>
    <% } %>

    <%- include('footer') %>

    <script src="/js/images/images.js" images="<%= JSON.stringify(images.map(image => ({ id: image.id }))) %>"></script>
</body>

</html>
